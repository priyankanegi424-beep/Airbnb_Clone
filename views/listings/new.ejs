<%- layout("/layouts/boilerplate.ejs") %>
<link rel="stylesheet" href="/css/button-style.css">

<div class="row mt-0 mx-auto">
  <div class="col-md-8 mx-auto">
    <br><br>
    <h3>Create A New Listing</h3>

    <form method="post" action="/listings"
      class="needs-validation"
      novalidate
      enctype="multipart/form-data">

      <!-- TITLE -->
      <div class="mb-3">
        <label class="form-label">Title</label>
        <input type="text" placeholder="Add A Catchy Title"
          name="listing[title]"
          class="form-control border border-black border-opacity-50"
          required>
      </div>

      <!-- DESCRIPTION -->
      <div class="mb-3">
        <label class="form-label">Description</label>
        <textarea rows="3" placeholder="Enter Description"
          name="listing[description]"
          class="form-control border border-black border-opacity-50"
          required></textarea>
      </div>

      <!-- UPLOAD IMAGE -->
      <div class="row mb-3">
        <div class="col-10">
          <label class="form-label">Upload Image</label>

          <input
            type="file"
            name="listing[images]"
            multiple
            accept="image/*"
            id="verify-img"
            class="form-control border border-black border-opacity-50"
            required
          >
        </div>

        <div class="col-2 text-center">
          <button type="text"
            id="addImgBtn"
            class="btn btn-sm btn-outline-dark mb-1"
            style="width:0px; background-color: white; border:none;">
            
          </button>

          <!-- <label class="form-control border border-white"
            style="margin-left:-15px;font-weight:700;">
            Verify
          </label> -->
<!-- 
          <input type="checkbox"
            class="form-btn btn ms-2 border border-black border-opacity-50"
            required
            style="height:25px;width:25px;"> -->
        </div>
      </div>

      <!-- IMAGE PREVIEW -->
      <div class="mb-3">
        <label class="form-label ll">Image Preview</label>

        <div class="preview-wrapper">
          <div id="imagePreview" class="preview-container"></div>
        </div>
      </div>

      <!-- CATEGORY -->
      <!-- <div class="mb-3">
        <label class="form-label">Choose Category</label>

        <div class="category-choose">
          <p><b>Single choose :</b> Click</p>
          <p><b>Multiple choose :</b> Ctrl + Click</p>
