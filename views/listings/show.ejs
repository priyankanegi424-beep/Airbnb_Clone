<% layout("/layouts/boilerplate") %>

<link rel="stylesheet" href="/css/show.css">

<!-- ================= TOP LISTING SECTION ================= -->
<div class="container mt-4">
  <div class="dozzy-main-box">
    <div class="row g-4">

      <!-- LEFT : IMAGE SLIDER -->
      <div class="col-md-6">
        <div class="dozzy-image-box">

          <!-- IMAGE SLIDER -->
          <div class="image-slider" id="imageSlider">
            <% if (listing.images && listing.images.length > 0) { %>
              <% listing.images.forEach((img, index) => { %>
                <img
                  src="<%= img.url %>"
                  class="slider-image <%= index === 0 ? 'active' : '' %>"
                  data-index="<%= index %>">
              <% }) %>
            <% } else { %>
              <img src="/Icon/navbar-icon-user.png" class="slider-image active">
            <% } %>
          </div>

          <!-- DESKTOP ARROWS (ONLY DESKTOP) -->
          <button class="slider-btn left-btn desktop-only">&#10094;</button>
          <button class="slider-btn right-btn desktop-only">&#10095;</button>

          <!-- MOBILE DOTS -->
          <div class="slider-dots mobile-only">
            <% if (listing.images) { %>
              <% listing.images.forEach((_, i) => { %>
                <span class="dot <%= i === 0 ? 'active' : '' %>" data-index="<%= i %>"></span>
              <% }) %>
            <% } %>
          </div>

        </div>
      </div>

      <!-- RIGHT : DETAILS -->
      <div class="col-md-6">
        <h1 class="dozzy-title"><%= listing.title %></h1>

        <!-- PRICE -->
        <div class="price-plan-box">
          <div class="plan-price">₹ <%= listing.price %> / Night</div>
          <div class="plan-time">
            <div><span>Check-in</span><br><strong>9 AM</strong></div>
            <div><span>Check-out</span><br><strong>8 PM</strong></div>
          </div>
        </div>

        <!-- ADD PEOPLE -->
        <div class="add-people-box">
          <h5>Add People</h5>
          <p class="add-people-text">
  <span class="free">
    Upto <strong><%= listing.freePeople || 8 %></strong> People is Free
  </span>
  <span class="extra">
    After that <strong>₹<%= listing.extraPersonCharge || 400 %></strong>/Person Extra
  </span>
</p>

        </div>

        <!-- FEATURES -->
        <div class="feature-buttons">
          <div class="feature-pill">Check Real Photos & Book</div>
          <div class="feature-pill">Full Privacy For Couples & Friends</div>
          <div class="feature-pill">Private Swimming Pool</div>
        </div>

        <!-- CONTACT -->
        <div class="contact-box">
          <a href="https://wa.me/<%= listing.whatsapp || '' %>" class="btn whatsapp-btn">WhatsApp</a>
          <a href="tel:<%= listing.phone || '' %>" class="btn call-btn">Call Us</a>
        </div>
      </div>

    </div>
  </div>
</div>

<!-- ================= REST SECTIONS UNCHANGED ================= -->
<script src="/js/show.js"></script>
